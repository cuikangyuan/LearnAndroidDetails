<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DashedView">
        <attr name="dashGap" format="dimension"/>
        <attr name="dashWidth" format="dimension"/>

    </declare-styleable>

    <declare-styleable name="RecyclerViewPlus">
        <attr name="listDivider" format="integer"/>
    </declare-styleable>

    <declare-styleable name="MyFirstView">
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="dimension"/>
        <attr name="textContent" format="string"/>
    </declare-styleable>

    <!--定义属性-->
    <declare-styleable name="custom_attrs">
        <attr name="custom_color1" format="color"/>
        <!--
        <attr name="custom_color2" format="color"/>
        <attr name="custom_color3" format="color"/>
        -->
    </declare-styleable>

    <!--定义Theme中可配置style -->
    <attr name="custom_style" format="reference"></attr>

    <!--定义默认style -->
    <style name="default_style">
        <item name="custom_color1">@color/red</item>
        <!--
        <item name="custom_color2">@color/green</item>
        <item name="custom_color3">@color/blue</item>
        -->
    </style>
</resources>
