<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DashedView">
        <attr name="dashGap" format="dimension"/>
        <attr name="dashWidth" format="dimension"/>

    </declare-styleable>

    <declare-styleable name="RecyclerViewPlus">
        <attr name="listDivider" format="integer"/>
    </declare-styleable>

    <declare-styleable name="MyFirstView">
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="dimension"/>
        <attr name="textContent" format="string"/>
    </declare-styleable>

    <!--定义属性-->
    <declare-styleable name="custom_attrs">
        <attr name="custom_color1" format="color"/>
        <!--
        <attr name="custom_color2" format="color"/>
        <attr name="custom_color3" format="color"/>
        -->
    </declare-styleable>

    <!--定义Theme中可配置style -->
    <attr name="custom_style" format="reference"></attr>


    <!-- 纯色背景按钮-->
    <declare-styleable name="SolidButton">
        <attr name="normalBgColor" format="color" />
        <attr name="touchedBgColor" format="color" />
        <attr name="unavailableBgColor" format="color" />
        <attr name="solidButtonCornerRadius" format="dimension" />
    </declare-styleable>


    <declare-styleable name="BezierLoadingView">
        <attr name="loadingradius" format="dimension"/>
        <attr name="loadingcolor" format="color"/>
        <attr name="loadingduration" format="integer"/>
    </declare-styleable>


    <declare-styleable name="RoundImageView">
        <attr name="borderRadius" format="dimension"/>
        <attr name="type">
            <enum name="circle" value="0"/>
            <enum name="round" value="1"/>
        </attr>
    </declare-styleable>
</resources>
